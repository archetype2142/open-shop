<% url = spree.product_path(product, taxon_id: taxon.try(:id)) %>
<div id="product_<%= product.id %>" class="masonry__item col-md-6 col-lg-3" data-hook="products_list_item">
  <div class="product">
    <% cache(taxon.present? ? [I18n.locale, current_currency, taxon, product] : cache_key_for_product(product)) do %>
      <%= link_to url, class: 'd-block text-center' do %>
        <%= small_image(product, class: "d-block mx-auto") %>
      <% end %>
      <a class="block" href="#">
        <div>
          <h5><%= content_tag(:span, truncate(product.name, length: 50), class: 'info mt-3 d-block', title: product.name) %></h5>
          <span><%= product&.category&.name %> </span>
        </div>
        <div>
          <!-- <span class="h4 inline-block type--strikethrough">$899</span> -->
          <span class="h4 inline-block"><%= display_price(product) %></span>
        </div>
      </a>
    <% end %>  
  </div>
</div>